---
import BaseLayout from "../layouts/BaseLayout.astro";

import PostSnippet from "../components/PostSnippet.astro";
import type { Frontmatter } from "../frontmatter";

const posts = (await Astro.glob<Frontmatter>("../pages/blog/**/*.md"))
  .filter((post) => !post.frontmatter.draft)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.publishedOn).getTime() -
      new Date(a.frontmatter.publishedOn).getTime()
  );
---

<BaseLayout
  title="Blog"
  description="My blog. My thoughts. My favorite subjects."
>
  <h1 class="text-3xl font-extrabold pb-4">Blog</h1>
  <p class="pb-8 dark:text-zinc-300">
    My blog, my thoughts, my favorite subjects.
  </p>

  <hr class="py-6 border-zinc-300 dark:border-zinc-600" />

  <div class="grid gap-6">
    {
      posts.map((post) => (
        <PostSnippet
          title={post.frontmatter.title}
          description={post.frontmatter.description}
          url={post.url}
        />
      ))
    }
  </div>
</BaseLayout>
