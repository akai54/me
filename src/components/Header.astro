---
import NavItem from "./NavItem.astro";
const emoji = ["🙈", "🌀", "💻", "🤘🏻"];
const icon = emoji[Math.floor(Math.random() * emoji.length)];
const pathname = new URL(Astro.request.url).pathname;
---

<header
  class="grid grid-cols-[max-content,auto,max-content,max-content,max-content,max-content] p-8 max-w-3xl items-center w-full"
>
  <a href="/" class="text-black dark:text-white no-underline">
    <span class="text-2xl" role="img" aria-label="emoji">{icon}</span>
    <span class="ml-4 text-2xl hidden sm:inline font-mono"> Tyler Wray</span>
  </a>
  <div></div>
  <NavItem to="/" isCurrent={pathname === "/"}>Posts</NavItem>
  <NavItem to="/me" isCurrent={pathname === "/me"}>Me</NavItem>
  <NavItem to="/contact" isCurrent={pathname === "/contact"}>Contact</NavItem>
  <button
    type="button"
    aria-label="dark mode switch"
    class="relative m-3 w-8 focus:outline-none"
  >
    <div
      class="dark:bg-purple-600 bg-gray-300 absolute rounded-full h-6 w-10 left-0 right-0 transition duration-200"
    >
    </div>
    <div
      class="dark:translate-x-4 dark:bg-purple-900 bg-gray-100 rounded-full flex items-center justify-center shadow relative w-6 h-6 transition duration-200"
    >
      <!-- Heroicons: sun -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-4 h-4 dark:hidden stroke-amber-500 fill-amber-500"
      >
        <path
          d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"
        ></path>
      </svg>

      <!-- Heroicons: moon -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-4 h-4 dark:block hidden stroke-purple-600 fill-purple-600"
      >
        <path
          fill-rule="evenodd"
          d="M9.528 1.718a.75.75 0 01.162.819A8.97 8.97 0 009 6a9 9 0 009 9 8.97 8.97 0 003.463-.69.75.75 0 01.981.98 10.503 10.503 0 01-9.694 6.46c-5.799 0-10.5-4.701-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 01.818.162z"
          clip-rule="evenodd"></path>
      </svg>
    </div>
  </button>
</header>
