---
interface Props {
  title: string;
  description: string;
  url?: string;
}

const { title, description, url } = Astro.props;
---

<a class="group no-underline" href={url}>
  <div class="relative py-3 w-max">
    <h3 class="text-xl font-bold">
      {title}
    </h3>
    <span
      class="h-0.5 left-0 w-full block absolute scale-x-0 group-hover:scale-x-100 transition-transform ease-in origin-left group-hover:bg-black dark:group-hover:bg-white"
    ></span>
  </div>
  <p class="dark:text-zinc-300 font-normal pb-5">{description}</p>
  <div class="font-bold">
    Read More
    <!-- Heroicons: arrow-long-right -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="currentColor"
      class="w-6 h-6 inline opacity-0 group-hover:opacity-100 text-purple-600 dark:text-purple-400 group-hover:translate-x-1 transition-all"
    >
      <path
        fill-rule="evenodd"
        d="M16.72 7.72a.75.75 0 011.06 0l3.75 3.75a.75.75 0 010 1.06l-3.75 3.75a.75.75 0 11-1.06-1.06l2.47-2.47H3a.75.75 0 010-1.5h16.19l-2.47-2.47a.75.75 0 010-1.06z"
        clip-rule="evenodd"></path>
    </svg>
  </div>
</a>
