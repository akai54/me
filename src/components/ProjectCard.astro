---
import Badge from "./Badge.astro";
import { Icon } from "astro-icon/components";

interface Props {
    name: string;
    role: "author" | "contributor" | "maintainer" | string;
    url: string;
    description?: string;
    languages: string[];
    icon: "github" | "bootstrap" | "heroku" | string;
}

const colors = {
    maintainer: "pink",
    author: "gradient-indigo",
    contributor: "yellow",
};

const { name, role, url, description, languages, icon } = Astro.props;
---

<li class="dark:bg-zinc-800 bg-zinc-700 text-zinc-400 gap-1 p-6 border border-zinc-700/60 rounded-lg flex flex-col">
    <div class="flex justify-between">
        <div class="flex flex-col sm:flex-row sm:items-baseline gap-2">
            <h3 class="text-lg font-medium text-white">{name}</h3>
            <Badge text={role} color={colors[role]} />
        </div>
        
    </div>
    {description && (
        <p class="leading-relaxed text-zinc-400 dark:text-zinc-400">
            {description}
        </p>
    )}
    <ul class="flex flex-wrap gap-2 mt-2">
        {languages.map((item) => (
            <li class="dark:bg-zinc-700 bg-zinc-600 dark:text-zinc text-white rounded-md px-2 py-1 text-sm">
                {item}
            </li>
        ))}
        <a href={url} target="_blank" rel="noopener noreferrer" aria-label={`Open ${name} repository in a new tab`}>
            <Icon name={icon} class="w-6 fill-current hover:text-zinc-300 hover:scale-110 transition-all" />
        </a>
    </ul>
</li>