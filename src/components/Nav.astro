---
import NavItem from "./NavItem.astro";
import ThemeButton from "./ThemeButton.astro";
const emoji = ["🂡", "➳", "💻", "🌶", "♟️", "☢️", "🎼"];
const icon = emoji[Math.floor(Math.random() * emoji.length)];
---

<nav
  class="grid justify-items-center sm:justify-items-start sm:grid-cols-[1fr_auto] p-8 max-w-3xl mx-auto items-center w-full"
>
  <a href="/" class="hidden sm:grid grid-flow-col gap-4">
    <span class="text-2xl" role="img" aria-label="emoji">{icon}</span>
    <span class="text-black dark:text-white text-2xl font-mono">
      Besher AL ADDAM</span
    >
  </a>
  <div class="grid grid-flow-col gap-4">
    <NavItem href="/">Home</NavItem>
    <NavItem href="/tutorials/">Tutorials</NavItem>
    <NavItem href="/blog/">Blog</NavItem>
    <NavItem href="/projects/">Projects</NavItem>
    <NavItem href="/translations/">Translations</NavItem>
    <NavItem href="/me/">Me</NavItem>
    <ThemeButton />
  </div>
</nav>
